#!/usr/bin/env sh

#  - https://github.com/koekeishiya/yabai/wiki/Installing-yabai-(latest-release)#configure-scripting-addition

# Check version of scripting additions
# Install or update scripting additions
yabai_sa=$(yabai --check-sa)
if ${yabai_sa}; then
  sudo ${yabai} --uninstall-sa
  sudo ${yabai} --install-sa
fi

yabai -m signal --add event=dock_did_restart action="sudo yabai --load-sa"
sudo yabai --load-sa


launchctl unload -F /System/Library/LaunchAgents/com.apple.WindowManager.plist > /dev/null 2>&1 &

# global settings
yabai -m config                                 \
    mouse_follows_focus          off            \
    focus_follows_mouse          off            \
    window_animation_duration    0.2            \
    window_origin_display        default        \
    window_placement             second_child   \
    window_topmost               off            \
    window_shadow                on             \
    window_border                off            \
    auto_padding                 on             \
    auto_padding_min_aspect      16.9           \
    auto_padding_width           840            \
    auto_padding_height          1200           \
    split_ratio                  0.65           \
    split_type                   auto           \
    auto_balance                 off            \
    top_padding                  12             \
    bottom_padding               02             \
    left_padding                 12             \
    right_padding                12             \
    window_gap                   06             \
    layout                       bsp            \
    mouse_modifier               alt            \
    mouse_action1                move           \
    mouse_action2                resize         \
    mouse_drop_action            swap

    # split_ratio                  0.65           \
    
    # window_opacity_duration      0.0            \
    # active_window_opacity        1.0            \
    # normal_window_opacity        0.90           \
    # window_opacity               off            \
    # insert_feedback_color        0xffd75f5f     \
    # active_window_border_color   0xff775759     \
    # normal_window_border_color   0xff555555     \
    # window_border_width          4              \
    # window_border_blur           on             \
    # window_border_hidpi          on             \
    # window_border_radius         12             \
        
yabai -m rule --add app="^Activity Monitor" sticky=off layer=above manage=off
yabai -m rule --add app="^System Settings" sticky=on layer=above manage=off
yabai -m rule --add app="^Preferences$" sticky=on layer=above manage=off
yabai -m rule --add app="^Settings$" sticky=on layer=above manage=off
yabai -m rule --add app="^Finder$" sticky=on layer=above manage=off

echo "yabai configuration loaded.."
